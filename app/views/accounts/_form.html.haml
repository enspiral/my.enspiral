=simple_form_for(@account, url: [@company, @account], html: { class: 'form-vertical'}) do |f|
  =f.input :name
  =f.input :public, hint: 'Allow history and balance to be seen by everyone'
  =f.input :category, collection: Account::CATEGORIES
  =f.input :closed, hint: 'If the account balance is 0, you can close the account'


  .row
    .span5
      .sub_form
        #accounts_people
          %h3 People Permissions
          %p.hint People listed here can manage the account
          =f.simple_fields_for :accounts_people do |apf|
            =render 'accounts_person_fields', f: apf
          .links
            =link_to_add_association 'Add Person', f, :accounts_people, class: 'btn'

    .span5
      .sub_form
        #accounts_companies
          %h3 Company Permissions
          %p.hint People who are admins of the comapanies listed here can manage the account
          =f.simple_fields_for :accounts_companies do |acf|
            =render 'accounts_company_fields', f: acf
          .links
            =link_to_add_association 'Add Company', f, :accounts_companies, class: 'btn'

  .form-actions
    =f.submit class: 'btn btn-primary'
