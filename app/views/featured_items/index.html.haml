.row.bottom_margin
  %h1.span5 Homepage Features
  .model_actions.span5
    %span Feature:
    =link_to "Person", new_featured_item_path(type: 'person'), {class: "btn"}
    =link_to "Company", new_featured_item_path(type: 'company'), {class: "btn"}
    =link_to "Project", new_featured_item_path(type: 'project'), {class: "btn"}

%table.table.table-striped.one_action
  %tbody
    - @featured_items.each do |i|
      -i = i.resource
      %tr
        %td.actions
          =link_to featured_item_path(i), method: 'delete', confirm: "Delete #{i.name} you sure?", class: 'red_ink' do
            %i.icon-remove
        %td=i.name
