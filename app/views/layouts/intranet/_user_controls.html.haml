%nav.navbar
  .navbar-inner
    .custom_container.span12
      %ul.nav 
        %li#header_logo
          = link_to image_tag('logo.png'), root_path
        %li
          =form_tag '/search', method: :get, class: "navbar-search span2 pull-left" do
            =text_field_tag :big_search, params[:big_search], class: 'search-query span2', placeholder: 'Anything/Everything'
        %ul.nav.pull-right
          %li.divider-vertical
          %li.dropdown
            %a{class: "dropdown-toggle", href: '#', data: {:toggle => 'dropdown'}}
              %i.icon-cog
            %ul.dropdown-menu
              %li= link_to 'Your Details', edit_profile_path
              %li= link_to 'Logout', destroy_user_session_path
          %li.divider-vertical.last
