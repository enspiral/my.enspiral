- title('Project Management')
.row.bottom_margin
  %h1.span5 Projects
  - if @company
    .model_actions.span5= link_to 'New Project', new_company_project_path(@company), class: 'btn'
  - else
    .model_actions.span5= link_to 'New Project', new_project_path, class: 'btn'

.tabbable
  %ul.nav.nav-tabs
    %li{class: "#{'active' if current_user.admin?}"}
      %a{"data-toggle" => "tab", :href => "#t1"} All Projects
    %li{class: "#{'active' unless current_user.admin?}"}
      %a{"data-toggle" => "tab", :href => "#t2"} Your Projects
  .tab-content
    #t1.tab-pane.projects.all_projects{class: "#{'active' if current_user.admin?}"}
      %nav
        .nav.table_actions
          %ul.nav.nav-tabs
            %li.nav_label
              Find:
            .search_box.navbar-form.pull-left
              =text_field_tag :search, nil, :class => "input-small"
            %li.nav_label
              Show:
            %li.filter.active.filter-active=link_to "Active", "#active"
            %li.filter.filter-inactive=link_to "Inactive", "#inactive"
            %li.filter.filter-all=link_to "All", "#"

      =content_for :javascripts do
        :coffeescript
          @search_filter = new Enspiral.Views.SimpleFilterSearch(
            el: '.all_projects'
          )
      =render 'projects_table',  {projects: @all_projects, company: @company}

    #t2.tab-pane.projects{class: "#{'active' unless current_user.admin?}"}
      - if @current_projects.empty?
        %p.centered
          %strong You are not currently part of any projects.
      - else
        =render partial: 'projects_table',  locals: {projects: @current_projects}
