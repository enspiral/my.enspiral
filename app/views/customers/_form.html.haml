= form_for([@company, @customer]) do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2
        = pluralize(@customer.errors.count, "error")
        prohibited this customer from being saved:
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    %td= f.label :name
    %td= f.text_field :name
  .control-group
    %td= f.label :description
    %td= f.text_area :description
  .actions
    = f.submit class: 'btn'
